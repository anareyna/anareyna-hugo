@require '_config/*'
@require '_mixins/*'
@require '_normalize/*'
@require '_helpers/*'

@import '_layouts/*'
@import '_patterns/*'

.u-ftImg
	background-image url($imgPath + 'blog/blog-ft.jpg')
	background-attachment fixed
	width 100%
	height 70vh
	background-size cover
	background-position center center
	position relative
	.title
		color white
		position absolute
		width 90%
		left 3rem
		bottom 2rem
		margin-bottom 0
		font-family $family1Regular
		text-transform uppercase
	.subtitle
		text-transform initial 
		font-size 1rem 

+mobile()
	.u-ftImg
		height 40vh 
		.title 
			left 1rem





